{
    "workflow_description": {
      "name":"nanopore_workflows",
      "version": 1.0,
      "label":"Basecalling, alignment, and SV calling",
      "type":"run_demultiplexing",
      "inputs":"{run_dir}/*",
      "outputs":[
        "raw_fastq/{sample}*fastq*"
      ],
      "run_parameters": {
        "cpu": 30,
        "memory": 128
      },
      "run_outputs":[
        "{library}/sequencing_run_info/*"
      ]
    },
    "general_params": [
      "sample_name",
      "run_dir"
    ],
    "gui_params" : {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:reference_info/default_reference.json##,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "lib_ROI": "wgs"
            }
          }
        },
        "list": ##INCLUDE:reference_info/reference2.json##
      }
    }
  }
  